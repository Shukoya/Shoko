#!/usr/bin/env ruby
# frozen_string_literal: true

ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../Gemfile", __dir__)

begin
  require "bundler/setup"
rescue LoadError
  # Bundler isn't required when running from a packaged gem.
end

$LOAD_PATH.unshift(File.expand_path("../lib", __dir__))
require "shoko"

Shoko::CLI.run(ARGV)
